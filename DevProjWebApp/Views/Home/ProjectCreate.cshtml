@model DevProjWebApp.Models.ProjectViewModel

@{
    ViewData["Title"] = "ProjectCreate";
}

<section class="col-12 container text-center mb-3 pt-5">
    <div class=" col-12 col-lg-8 container pt-5">
        <div class="card">
            <form class="card-body text-left">
                <h5>Register with Email</h5>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LinkedRepositoryURL" class="control-label"></label>
                    <input asp-for="LinkedRepositoryURL" class="form-control" />
                    <span asp-validation-for="LinkedRepositoryURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="isPrivate" /> @Html.DisplayNameFor(model => model.isPrivate)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
