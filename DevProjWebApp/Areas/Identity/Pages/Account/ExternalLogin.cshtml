@page
@model ExternalLoginModel
@{ ViewData["Title"] = "Register"; }

<section class="col-12 container text-center mb-3 pt-5">
    <div class=" col-12 col-lg-5 container pt-5">
        <div class="card">
            <form class="text-left card-body" asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h5 id="external-login-title">Authenticate with @Model.ProviderDisplayName</h5>
                <p id="external-login-description" class="text-info">
                    You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
                    Please enter a username and email address for this site below and click the Register button to finish
                    logging in.
                </p>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label style="font-weight: bold;" asp-for="Input.UserName"></label>
                    <input asp-for="Input.UserName" class="form-control" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="font-weight: bold;" asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
